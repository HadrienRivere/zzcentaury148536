<% if (api_success.length > 0) { %>
    <div style="transition: 1.0s" class="colorb-successfully marginl-200 paddingt-20 paddingb-20 api_success">
        <h3 class="colort-white text-center display-in-initial paddingl-20"><%= api_success %> </h3>
        <div class="float-right display-in-block paddingr-20">
            <button class="btn-6" onclick="hide_api_success()">X</button>
        </div>
    </div>
<% } %>

<script>
    const api_success = document.querySelector('.api_success')
    const hide_api_success = () => api_success.style.display = "none";
</script>
